{
    "manifest_version": 3,
    "name": "EdStem Video Entry Logger",
    "version": "1.0",
    "description": "Logs entry_id of video slides from EdStem lessons.",
    "permissions": ["activeTab", "webRequest", "storage", "tabs", "scripting"],
    "content_scripts": [
      {
        "matches": ["https://edstem.org/us/courses/*/lessons/*"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    }
  }
  